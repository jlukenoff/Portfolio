{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "lib": ["ES2015"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["dist", "../node_modules"]
}
