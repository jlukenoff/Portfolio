{
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/tech",
        "destination": "/tech.html"
      },
      {
        "source": "/resume",
        "destination": "/resume.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
